<launch>
  <master auto="start"/>

  <!-- MAP SERVER -->
  <arg name="map_file" default="$(find pir2_navigation)/map/map.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)">
    <param name="frame_id" value="/map" />
  </node>

  <!-- AMCL -->
  <include file="$(find pir2_navigation)/launch/amcl.launch"/>

  <!-- MOVE BASE -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <!-- COST MAP -->
    <rosparam file="$(find pir2_navigation)/config/costmap/costmap_common.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find pir2_navigation)/config/costmap/costmap_common.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find pir2_navigation)/config/costmap/local_costmap.yaml" command="load" />
    <rosparam file="$(find pir2_navigation)/config/costmap/global_costmap.yaml" command="load" />

    <!-- BASE GLOBAL PLANNER -->
    <rosparam file="$(find pir2_navigation)/config/planner/global/navfn_planner.yaml" command="load" />
    <!-- BASE LOCAL PLANNER -->
    <rosparam file="$(find pir2_navigation)/config/planner/local/dwa_planner.yaml" command="load" />
    <!-- RECOVERY -->
    <rosparam file="$(find pir2_navigation)/config/planner/recovery_behaviors.yaml" command="load"/>

    <!-- MOVE BASE -->
    <param name="controller_frequency" value="10.0" />
    <param name="controller_patience" value="1.0" />
    <param name="max_planning_retries" value="10" />
    <param name="oscillation_timeout" value="0.2" />
    <param name="clearing_rotation_allowed" value="true" />

    <!-- remap cmd_vel topic for gazebo -->
    <remap from="cmd_vel" to="/cmd_vel"/>
	<remap from="odom" to="/odom"/>
  </node>

  <node name="rviz" pkg="rviz" type="rviz" required="true" args="-d $(find pir2_navigation)/rviz/navigation.rviz" />
</launch>
